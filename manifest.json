{
  "name": "Tabs Organizer",
  "version": "0.0.0.1",
  "manifest_version": 3,
  "description": "Organize your tabs in groups based on the URL",
  "icons": {
      "16": "icons/logo16x16.png",
      "32": "icons/logo32x32.png",
      "48": "icons/logo48x48.png",
      "128": "icons/logo128x128.png"
  },
  "action": {
      "default_popup": "popup/popup.html"
  },
  "content_scripts": [
      {
          "matches": [
            "<all_urls>"
          ],
          "js": ["content-scripts/content.js"]
      }
  ],
  "web_accessible_resources": [{
    "matches": ["<all_urls>"],
    "resources": ["lib/handler.js"]
  }],
  "background": {
      "service_worker": "background.js",
      "type": "module"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "permissions": ["activeTab", "tabs", "tabGroups"]
}
